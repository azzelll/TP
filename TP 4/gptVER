import tkinter as tk
from tkinter import Menu
from datetime import datetime

# Fungsi untuk setiap tombol
def buat_lelucon():
    chat_log.insert(tk.END, "Chatbot: Kenapa buku pelajaran sedih? Karena dia punya banyak masalah!\n")

def tanya_jam():
    waktu = datetime.now().strftime("%H:%M:%S")
    chat_log.insert(tk.END, f"Chatbot: Saat ini pukul {waktu}.\n")

def soal_matematika():
    jawaban = entry_input.get().strip()
    if jawaban == "13":
        chat_log.insert(tk.END, "Chatbot: Benar, jawaban yang benar adalah 13.\n")
    else:
        chat_log.insert(tk.END, "Chatbot: Salah, jawaban yang benar adalah 13.\n")

def tombol_xyz():
    chat_log.insert(tk.END, "Chatbot: Tombol ini belum dikonfigurasi. Silakan coba fitur lain!\n")

def kirim_pesan():
    pesan = entry_input.get().strip()
    if pesan:
        chat_log.insert(tk.END, f"User: {pesan}\n")
        entry_input.delete(0, tk.END)

# Fungsi menu tema
def tema_terang():
    root.config(bg="white")
    chat_log.config(bg="white", fg="black")
    entry_input.config(bg="white", fg="black")
    for button in button_list:
        button.config(bg="lightgray", fg="black")

def tema_gelap():
    root.config(bg="black")
    chat_log.config(bg="black", fg="white")
    entry_input.config(bg="gray", fg="white")
    for button in button_list:
        button.config(bg="gray", fg="white")

# Membuat jendela utama
root = tk.Tk()
root.title("Chatbot Sederhana")
root.geometry("500x400")

# Area log percakapan
chat_log = tk.Text(root, height=15, bg="white", fg="black", state=tk.NORMAL)
chat_log.pack(padx=10, pady=10, fill=tk.BOTH)

# Tombol
frame_buttons = tk.Frame(root)
frame_buttons.pack(pady=10)

btn_lelucon = tk.Button(frame_buttons, text="Buat Lelucon", command=buat_lelucon)
btn_jam = tk.Button(frame_buttons, text="Tanya Jam", command=tanya_jam)
btn_matematika = tk.Button(frame_buttons, text="Soal Matematika", command=soal_matematika)
btn_xyz = tk.Button(frame_buttons, text="XYZ", command=tombol_xyz)

# Daftar tombol untuk tema
button_list = [btn_lelucon, btn_jam, btn_matematika, btn_xyz]

# Menempatkan tombol di frame
for btn in button_list:
    btn.pack(side=tk.LEFT, padx=5)

# Input pengguna
frame_input = tk.Frame(root)
frame_input.pack(pady=10)

entry_input = tk.Entry(frame_input, width=50)
entry_input.pack(side=tk.LEFT, padx=5)
btn_kirim = tk.Button(frame_input, text="Kirim", command=kirim_pesan)
btn_kirim.pack(side=tk.LEFT)

# Menu Bar
menu_bar = Menu(root)
root.config(menu=menu_bar)

menu_tema = Menu(menu_bar, tearoff=0)
menu_tema.add_command(label="Terang", command=tema_terang)
menu_tema.add_command(label="Gelap", command=tema_gelap)

menu_tentang = Menu(menu_bar, tearoff=0)
menu_tentang.add_command(label="Tentang", command=lambda: chat_log.insert(tk.END, "Chatbot: Ini adalah chatbot sederhana.\n"))

menu_bar.add_cascade(label="Tema", menu=menu_tema)
menu_bar.add_cascade(label="Tentang", menu=menu_tentang)

# Menjalankan aplikasi
root.mainloop()
